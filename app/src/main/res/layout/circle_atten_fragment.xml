<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include
        android:id="@+id/loading"
        layout="@layout/loading_layout"
        android:visibility="gone" />
    <com.zhy.autolayout.AutoLinearLayout
        android:id="@+id/no_network"
       android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone" >
        <com.zhy.autolayout.AutoRelativeLayout
            android:id="@+id/Loaded"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/wunai"
                android:src="@mipmap/wunai"
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:layout_marginTop="40px"
                android:layout_below="@id/wunai"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:text="小主，您还未登录应用,  "
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/gotoLoad"
                    android:textColor="@color/cate_title4"
                    android:text="去登录"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </com.zhy.autolayout.AutoRelativeLayout>
        </com.zhy.autolayout.AutoLinearLayout>
    <com.zhy.autolayout.AutoLinearLayout
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.zhy.autolayout.AutoRelativeLayout
            android:id="@+id/wuAtten"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <ImageView
                android:id="@+id/nullAtten"
                android:layout_centerInParent="true"
                android:src="@mipmap/file"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_marginTop="40px"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/nullAtten"
                android:text="小主人，您还没有关注任何好友"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </com.zhy.autolayout.AutoRelativeLayout>
    </com.zhy.autolayout.AutoLinearLayout>
</com.zhy.autolayout.AutoRelativeLayout>
