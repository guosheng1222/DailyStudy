<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/hot_llt_three"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="10px"
    android:visibility="gone">


    <!--三张图片-->
    <ImageView
        android:id="@+id/hot_iv1"
        android:layout_width="0px"
        android:layout_height="240px"
        android:layout_marginRight="10px"
        android:layout_weight="1"
        android:scaleType="centerCrop"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/hot_iv2"
        android:layout_width="0px"
        android:layout_height="240px"
        android:layout_weight="1"
        android:scaleType="centerCrop"
        android:visibility="gone" />

    <com.zhy.autolayout.AutoRelativeLayout
        android:id="@+id/hot_more_rl"
        android:layout_width="0px"
        android:layout_height="240px"
        android:layout_weight="1"
        android:layout_marginLeft="10px"
        android:visibility="gone">

        <ImageView
            android:id="@+id/hot_iv3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:scaleType="centerCrop"
            android:visibility="gone" />

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/hot_more_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/post_item_image_count"
                android:visibility="gone" />

            <TextView
                android:id="@+id/hot_more_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0图"
                android:textColor="@color/colorWhite"
                android:visibility="gone" />
        </com.zhy.autolayout.AutoLinearLayout>
    </com.zhy.autolayout.AutoRelativeLayout>
    <!--两张图片-->
    <ImageView
        android:id="@+id/hot_two_iv1"
        android:layout_width="0px"
        android:layout_height="300px"
        android:layout_gravity="center"
        android:layout_marginRight="10px"
        android:layout_weight="1"
        android:scaleType="centerCrop"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/hot_two_iv2"
        android:layout_width="0px"
        android:layout_height="300px"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:scaleType="centerCrop"
        android:visibility="gone" />
    <!--大图-->
    <ImageView
        android:id="@+id/hot_first_iv"
        android:layout_width="match_parent"
        android:layout_height="380px"
        android:scaleType="centerCrop"
        android:visibility="gone" />

</com.zhy.autolayout.AutoLinearLayout>
